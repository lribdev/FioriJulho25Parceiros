<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="criarParceiro"
			editable="false"
			layout="ResponsiveGridLayout"
			title="{i18n>tituloFormParceiro}"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
                <Label text="Nome 1" />
                <Input value="{novoParceiro>/PartnerName1}" editable="{modo>/editavel}" />
                <Label text="Nome 2" />
                <Input value="{novoParceiro>/PartnerName2}" editable="{modo>/editavel}" />
                <Label text="Termo de Pesquisa 1" />
                <Input value="{novoParceiro>/SearchTerm1}" editable="{modo>/editavel}" />
                <Label text="Termo de Pesquisa 2" />
                <Input value="{novoParceiro>/SearchTerm2}" editable="{modo>/editavel}" />
                <Label text="Rua" />
                <Input value="{novoParceiro>/Street}" editable="{modo>/editavel}" />
                <Label text="Número" />
                <Input value="{novoParceiro>/HouseNumber}" editable="{modo>/editavel}" />
                <Label text="Bairro" />
                <Input value="{novoParceiro>/District}" editable="{modo>/editavel}" />
                <Label text="Cidade" />
                <Input value="{novoParceiro>/City}" editable="{modo>/editavel}" />
                <Label text="Estado" />
                <Input value="{novoParceiro>/Region}" editable="{modo>/editavel}" />
                <Label text="País" />
                <Input value="{novoParceiro>/ZipCode}" editable="{modo>/editavel}" />
                <Label text="CEP" />
                <Input value="{novoParceiro>/Country}" editable="{modo>/editavel}" />
            </f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>